BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    MDLabel:
        text: 'Gerador de QR Code'
        font_style: 'H4'
        halign: 'center'
        size_hint_y: None
        height: self.texture_size[1]

    MDTextField:
        id: input_matricula
        hint_text: 'Matr√≠cula/CPF'
        on_text_validate: root.gerar_qrcode()
        multiline: False

    MDTextField:
        id: input_senha
        hint_text: 'Senha'
        password: True
        on_text_validate: root.gerar_qrcode()
        multiline: False

    MDLabel:
        id: resultado
        text: ''
        theme_text_color: 'Error'
        halign: 'center'
        valign: 'middle'
        size_hint_y: None
        height: self.texture_size[1]
