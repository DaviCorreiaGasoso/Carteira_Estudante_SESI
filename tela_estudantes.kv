ScreenManager:
    Tela_Estudante:

<Tela_Estudante>: 
    name: 'tela_estudante'

    FloatLayout:
                
        MDTopAppBar:
            title: "Carteira SESI"
            pos_hint: {"center_y": 0.98}

        AsyncImage:
            source:'https://cdn0.iconfinder.com/data/icons/printing-house/35/29-512.png'
            size_hint: 0.3,0.3
            pos: 190,230


        MDLabel:
            text: "Informações do Aluno" 
            halign: 'center'
            pos: 350,470
            size_hint: .3, .2
            bold: True

    
        MDTextField:
            id: 'nome_aluno'
            mode: "rectangle"
            size_hint_x: None
            width: "240dp"
            pos: 500,400
            hint_text: "Nome"

        MDTextField:
            id: 'serie_aluno'
            mode: "rectangle"
            size_hint_x: None
            width: "240dp"
            pos: 500,300
            hint_text: "Série"

        MDTextField:
            id: 'status_aluno'
            mode: "rectangle"
            size_hint_x: None
            width: "240dp"
            pos: 500,200    
            hint_text: "Status"
