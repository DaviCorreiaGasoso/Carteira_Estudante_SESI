ScreenManager:
    Login_Estudantes:

<Login_Estudantes>:
    name: 'login'

    MyCanvasWidget:
        size_hint: None, None
        size: 300, 300
        pos_hint:  {"center_x": 0.5, "top": 0.9}

    FloatLayout:
                
        MDLabel:
            text: "LOGIN"
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_style: 'H3'
            font_name: 'Georgia'
            size_hint: (0.6, 0.1)
            pos_hint: {"center_x": 0.5, "top": 0.9}
        
        MDLabel:
            text: "ESTUDANTE"
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_style: 'H4'
            font_name: 'Georgia'
            size_hint: (0.6, 0.1)
            pos_hint: {"center_x": 0.5, "top": 0.8}

    
        
        MDTextField:
            id: user
            hint_text: "Email"
            icon_left: "account"
            mode: "rectangle"
            helper_text_mode: "on_focus"
            helper_text: "DIGITE SEU CPF OU MATR√çCULA"
            helper_text_color: 'blue'
            size_hint: (0.8, 0.1)
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            
        
        MDTextField:
            id: password
            mode: "rectangle"
            hint_text: "Senha"
            helper_text: "DIGITE SUA SENHA"
            helper_text_mode: "on_focus"
            password: True
            icon_left: "lock"
            size_hint: (0.8, 0.1)
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
           
        
        MDRaisedButton:
            text: "Login"
            size_hint: (0.4, 0.1)
            font_style: 'H5'
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            md_bg_color: "green"
            on_release: app.login()
    
<MyCanvasWidget@Widget>:
    canvas.before:
        Color:
            rgba:0,0,0.8,1
        
        RoundedRectangle:
            pos: self.center_x - 500/2, self.center_y - 50/2
            size: 500, 200
            radius: [20,20,20,20]