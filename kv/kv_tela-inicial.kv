
MDScreen:
    MDLabel:
        text: 'Quem está usando o'
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.85}

    MDLabel:
        text: 'APP?'
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.80}
        font_style: 'H4'
        bold: True

    MyCanvasWidget:
        size_hint: None, None
        size: 300, 300
        pos_hint: {'center_x':0.5, 'center_y':0.5}

    MDRaisedButton:
        text: 'ALUNO'
        halign: 'center'
        size_hint: 0.25, 0.05
        border_radius: [20]
        font_size: 25
        pos_hint: {'center_x': 0.45,'center_y':0.610 }

    MDRaisedButton:
        text: 'RESPONSÁVEL'
        halign: 'center'
        size_hint: 0.25, 0.05
        border_radius: [20]
        font_size: 25
        pos_hint: {'center_x': 0.45,'center_y':0.495 }

    MDRaisedButton:
        text: 'FUNCIONÁRIO'
        halign: 'center'
        size_hint: 0.25, 0.05
        border_radius: [20]
        font_size: 25
        pos_hint: {'center_x': 0.45,'center_y':0.385 }

    AsyncImage:
        source: 'https://i.pinimg.com/564x/14/16/ce/1416ceea68f2e68cf966bc2313886ab8.jpg'
        size_hint: 0.1, 0.1
        pos_hint: {'center_x: 0.75,'center_y': 0.61}


<MyCanvasWidget@Widget>:
    canvas.before:

        Color:
            rgba: 0,0,0,0.25
        RoundedRectangle:
            pos: self.center_x-405/2, self.center_y-280/2
            size: 420, 270
            radius: [20,20,20,20]

        Color:
            rgba: 0.9,0.9,0.9,1
        RoundedRectangle:
            pos: self.center_x-420/2, self.center_y-270/2
            size: 420, 270
            radius: [20,20,20,20]