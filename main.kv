#:include kv/tela_login_estudantes.kv
#:include kv/tela_login_funcionarios.kv
#:include kv/tela_login_pais.kv
#:include kv/tela_estudantes.kv
#:include kv/tela_funcionarios.kv

ScreenManager:
    Login_Inicial:   
    Login_Estudantes:
    Login_Funcionarios:
    Login_Pais:
    Tela_Pais:
    Tela_Estudantes:
    Tela_Funcionarios:

<Login_Estudantes>:
    name: 'login_estudantes'

<Tela_Estudantes>:
    name: 'Tela_Estudantes'

<Login_Funcionarios>
    name: 'login_funcionarios'

<Login_Pais>:
    name: 'login_pais'

<Tela_Pais>:
    name: 'Tela_Pais'

<Tela_Funcionarios>:
    name: 'tela_funcionarios'

<Login_Inicial>:
    name: 'login_inicial'

    MDLabel:
        text: 'Quem está usando o'
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.85}

    MDLabel:
        text: 'APP?'
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.80}
        font_style: 'H4'
        bold: True

    MyCanvasWidget:
        size_hint: None, None
        size: 300, 300
        pos_hint: {'center_x':0.5, 'center_y':0.5}

    MDRaisedButton:
        text: 'ALUNO'
        halign: 'center'
        size_hint: 0.25, 0.05
        border_radius: [20]
        font_size: 25
        pos_hint: {'center_x': 0.45,'center_y':0.610 }
        on_release: app.root.current = 'login_estudantes'

    MDRaisedButton:
        text: 'RESPONSÁVEL'
        halign: 'center'
        size_hint: 0.25, 0.05
        border_radius: [20]
        font_size: 25
        pos_hint: {'center_x': 0.45,'center_y':0.495 }
        on_release: app.root.current = 'login_pais'

    MDRaisedButton:
        text: 'FUNCIONÁRIO'
        halign: 'center'
        size_hint: 0.25, 0.05
        border_radius: [20]
        font_size: 25
        pos_hint: {'center_x': 0.45,'center_y':0.385 }
        on_release: app.root.current = 'login_funcionarios'

    AsyncImage:
        source: 'https://cdn-icons-png.flaticon.com/512/21/21079.png'
        size_hint: 0.08, 0.08
        pos_hint: {'center_x': 0.640,'center_y': 0.61}

    AsyncImage:
        source: 'https://cdn-icons-png.flaticon.com/128/3106/3106921.png'
        size_hint: 0.08, 0.08
        pos_hint: {'center_x': 0.640,'center_y': 0.51}

    AsyncImage:
        source: 'https://cdn-icons-png.flaticon.com/512/251/251054.png'
        size_hint: 0.08, 0.08
        pos_hint: {'center_x': 0.640,'center_y': 0.40}

<MyCanvasWidget@Widget>:
    canvas.before:

        Color:
            rgba: 0,0,0,0.25
        RoundedRectangle:
            pos: self.center_x-405/2, self.center_y-280/2
            size: 420, 270
            radius: [20,20,20,20]

        Color:
            rgba: 0.9,0.9,0.9,1
        RoundedRectangle:
            pos: self.center_x-420/2, self.center_y-270/2
            size: 420, 270
            radius: [20,20,20,20]